---
const navList = [
  {
    text: 'TOP',
    url: '/'
  },
  {
    text: 'NEWS',
    url: '/news/'
  },
  {
    text: 'XXX',
    url: '/xxx/'
  },
];
---

<header class="l-header">
  <nav class="l-nav">
    <ul class="l-nav-list">
      {navList.map((item) => (
        <li class="l-nav-list__item">
          <a class="l-nav-list__link link-pjax" href={item.url}>{item.text}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style lang="scss">
  .l-header {
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    width: 100%;
    padding: 5px 30px;
    background-color: var(--color-white);
    border-bottom: 1px solid var(--color-blue);
  }

  .l-nav-list {
    display: flex;
    gap: 0 20px;
    justify-content: flex-end;
    font-size: 30px;
    font-weight: bold;
    &__link {
      color: var(--color-blue);
      text-decoration: none;
    }
  }
</style>