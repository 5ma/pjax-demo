---
export interface Props {
	text: string;
	url: string;
}

const { text, url } = Astro.props;
---

<div class="link-wrapper">
  <div class="link-card">
    <h1>{text}</h1>
  </div>
</div>

<style lang="scss">
  .link-wrapper {
    display: grid;
    place-content: center;
    place-items: center;
    height: 100dvh;
  }
  .link-card {
    position: relative;
    display: block;
    width: fit-content;
    margin-inline: auto;
    font-weight: 600;
    font-size: min(10vw, 100px);
    color: var(--color-black);
    text-decoration: none;
    border-bottom: 0.2em solid;
    line-height: 1.1;
    &::before {
      position: absolute;
      left: 0;
      top: 0;
      display: flex;
      align-items: center;
